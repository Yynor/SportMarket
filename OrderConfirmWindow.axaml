<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Market.OrderConfirmWindow"
        Title="OOO Спортивные товары "
        Width="500"
        Height="650"
        WindowStartupLocation="CenterScreen"
        MinHeight="650" 
        MaxHeight="650" 
        MinWidth="500" 
        Icon="avares://Market/Assets/icon.png"
        MaxWidth="500">
        
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock FontFamily = "avares://Market/Fonts/Comic Sans MS.ttf#Comic Sans MS"  Text="Цена: " FontSize="24" Margin="0,0,5,20"/>
            <TextBlock FontFamily = "avares://Market/Fonts/Comic Sans MS.ttf#Comic Sans MS" x:Name="Cost" Text="0" FontSize="24" Margin="0,0,0,20"/>
            </StackPanel>
        
        <TextBlock FontFamily = "avares://Market/Fonts/Comic Sans MS.ttf#Comic Sans MS" x:Name="Pick" Margin="0,0,0,20" Text="Адрес доставки: г. Москва, ул. Ленина, д. 1" FontSize="18" />
        <Button FontFamily = "avares://Market/Fonts/Comic Sans MS.ttf#Comic Sans MS" Content="Подтвердить" Margin="0,0,0,20" Width="150" Height="30"  Background="#76E383" Foreground="#FFFFFF" Click="ConfirmOrder_Click"/>
    </StackPanel>

            </Grid>

  
    
</Window>